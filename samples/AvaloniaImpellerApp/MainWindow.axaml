<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AvaloniaImpellerApp.MainWindow"
        Width="800"
        Height="600"
        Title="Avalonia Impeller Sample">
  <Grid RowDefinitions="Auto,*">
    <StackPanel Orientation="Horizontal" Spacing="8" Margin="12">
      <TextBlock Text="Complexity" VerticalAlignment="Center" />
      <Slider x:Name="ComplexitySlider"
              Minimum="0"
              Maximum="24"
              Value="8"
              TickFrequency="1"
              IsSnapToTickEnabled="True"
              Width="220" />
      <TextBlock x:Name="ComplexityValue"
                 Text="8"
                 VerticalAlignment="Center" />
    </StackPanel>
    <ContentControl x:Name="RenderHost" Grid.Row="1" />
  </Grid>
</Window>
