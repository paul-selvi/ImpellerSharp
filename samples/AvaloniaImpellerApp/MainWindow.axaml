<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AvaloniaImpellerApp"
        x:Class="AvaloniaImpellerApp.MainWindow"
        Width="800"
        Height="600"
        Title="Avalonia Impeller Sample">
  <Grid ColumnDefinitions="240,*"
        RowDefinitions="Auto,*">
    <TabControl x:Name="SceneTabs"
                Grid.RowSpan="2"
                Margin="12"
                Width="220"
                TabStripPlacement="Left">
      <TabItem Header="Basic Demo"
               Tag="{x:Static local:SceneKind.BasicDemo}" />
      <TabItem Header="Gradient Gallery"
               Tag="{x:Static local:SceneKind.GradientGallery}" />
      <TabItem Header="Typography"
               Tag="{x:Static local:SceneKind.Typography}" />
      <TabItem Header="Vector Paths"
               Tag="{x:Static local:SceneKind.VectorPaths}" />
      <TabItem Header="Layer Effects"
               Tag="{x:Static local:SceneKind.LayerEffects}" />
      <TabItem Header="Blend Modes"
               Tag="{x:Static local:SceneKind.BlendModes}" />
      <TabItem Header="MotionMark"
               Tag="{x:Static local:SceneKind.MotionMark}" />
    </TabControl>

    <StackPanel Grid.Column="1"
                Grid.Row="0"
                Margin="12"
                Spacing="8">
      <TextBlock x:Name="SceneTitle"
                 FontSize="22"
                 FontWeight="Bold" />
      <TextBlock x:Name="SceneDescription"
                 TextWrapping="Wrap"
                 Opacity="0.8" />
      <StackPanel x:Name="MotionControls"
                  Orientation="Horizontal"
                  Spacing="8"
                  IsVisible="False">
        <TextBlock Text="Complexity"
                   VerticalAlignment="Center" />
        <Slider x:Name="ComplexitySlider"
                Minimum="0"
                Maximum="24"
                Value="8"
                TickFrequency="1"
                IsSnapToTickEnabled="True"
                Width="220" />
        <TextBlock x:Name="ComplexityValue"
                   Text="8"
                   VerticalAlignment="Center" />
      </StackPanel>
    </StackPanel>

    <Border Grid.Column="1"
            Grid.Row="1"
            Margin="12"
            Background="#10141A"
            CornerRadius="6">
      <ContentControl x:Name="RenderHost" />
    </Border>
  </Grid>
</Window>
